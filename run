#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$SCRIPT_DIR"

if [[ $# -lt 1 ]]; then
  echo "Usage: run <command>" >&2
  echo "Available commands: dashboard" >&2
  exit 1
fi

case "$1" in
  dashboard)
    exec "$PROJECT_ROOT/run_dashboard.sh"
    ;;
  *)
    echo "Unknown command: $1" >&2
    echo "Available commands: dashboard" >&2
    exit 1
    ;;
esac
